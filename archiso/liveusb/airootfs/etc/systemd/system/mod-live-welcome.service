[Unit]
Description=MOD Live Welcome
After=livecd-alsa-unmuter.service

[Service]
Type=simple
ExecStart=/root/.mod-live/mod-live-usb-welcome -platform linuxfb -style fusion --no-sandbox
Restart=always
WorkingDirectory=/root/.mod-live

[Install]
WantedBy=sound.target
